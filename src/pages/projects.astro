---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Projects from "@components/projects.astro";
import { AstroSeo } from '@astrolib/seo';

const projects = [
  {
    name: "BeerJS Skopje",
    description: "Informal meetups where web development and JavaScript enthusiasts gather to share knowledge, discuss trends, and network in a relaxed atmosphere.",
    image: '/beerjs-cover.png',
    button: {
      link: "https://beerjs.mk",
    },
  },
  {
    name: "The CodePub Podcast",
    description: "A bi-weekly podcast exploring the stories, careers, and experiences of tech professionals, offering valuable insights and connections for developers at any stage.",
    image: '/codepub-cover.png',
    button: {
      link: "https://codepub.dev",
    },
  },
  {
    name: "Partner with DeveD!",
    description: "Boost your team's potential and innovate together through customized workshops, dynamic events, and engaging tech content.",
    image: '/_deved-cta-cover.png',
    button: {
      link: "/contact",
      text: "Work with us"
    },
  },
];
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/opengraph.jpg",
  Astro.site
).toString();
---

<AstroSeo
      title={"DeveD | Projects"}
      description="DeveD | Your friendly neighborhood DevRel."
      canonical={canonicalURL}
      twitter={{
        handle: "@DeveD_Skopje",
        site: "https://deved.mk",
        cardType: "summary_large_image",
      }}
      openGraph={{
        url: Astro.url.toString() || 'https://deved.mk',
        title: "DeveD | Projects",
        description: "DeveD | Your friendly neighborhood DevRel.",
        images: [
          {
            url: resolvedImageWithDomain,
            width: 1200,
            height: 630,
            alt: "Social open graph",
            type: "image/jpeg",
          },
          {
            url: resolvedImageWithDomain,
            width: 4096,
            height: 4096,
            alt: "Twitter open graph",
            type: "image/jpeg",
          },
          { url: resolvedImageWithDomain },
          { url: resolvedImageWithDomain },
        ],
        site_name: "DeveD",
      }}
    
    />

<Layout title="Projects">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Projects</Fragment>
      <Fragment slot="desc"
        >DeveD's work: Project Highlights</Fragment
      >
    </Sectionhead>

    <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-screen-lg mt-12">
      {projects.map((item) => <Projects project={item} />)}
    </div>
  </Container>
</Layout>
