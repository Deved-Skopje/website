---
import { Tick } from "@components/ui/icons";
import Link from "@components/ui/link.astro";

const { project } = Astro.props;
---

<div>
  <div
    class="flex flex-col w-full order-first lg:order-none border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md">
    <div class="text-center">
      <h4 class="text-4xl font-bold text-black md:text-4xl">{project.name}</h4>
      <img class="w-full h-full object-cover border border-neutral-400 mt-4 shadow-lg" src={project.image} />
      <p
        class="mt-3 ">
        { project.description }
      </p>
    </div>
    <div class="flex mt-8">
      <Link
        href={project.button.link || "#"}
        block
        style="primary">
        {project.button.text || 'Find out more'}
      </Link>
    </div>
  </div>
</div>
